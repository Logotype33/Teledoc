@model DataLayer.Entityes.Client

<h1 class="text-center mt-3">Изменения данных об организации</h1>
<form method="post" class="mt-5">
    <div class="row justify-content-center">
        <div class="col-8 mb-4">
            <label asp-for="@Model.INN" class="form-label">Введите ваш ИНН</label>
            <input class="form-control" asp-for="@Model.INN" type="text" placeholder="Enter your INN" required>
        </div>
        <div class="col-8 mb-4">
            <label asp-for="@Model.Name" class="form-label">Введите название вашей организации</label>
            <input class="form-control" asp-for="@Model.Name" type="text" placeholder="Enter name of your organization or SP" required>
        </div>
        <div class="col-8 mb-5">
            <p>Выберите тип вашей организации</p>
            <select v-model="selected" asp-for="@Model.Type" class="form-select busy-type">
                <option value="SP">Индивидуальный предприниматель</option>
                <option value="Entity">ООО</option>
            </select>
        </div>
        <h3 class="text-center">Список учредителей</h3>
        <div class="row justify-content-center">
            <div class="col-12 mb-4 d-flex justify-content-center  founders">
                @foreach (var item in Model.Founders)
                {
                <div class="col-8 mb-6 justify-content-center align-items-center d-flex founderItem">
                    <div class="text-center">
                        <label>Инн учредителя</label>
                        <input class="border-0 bg-transparent m-3 w-50" asp-for="@item.INN" type="text">
                    </div>
                    <div class="text-center">
                        <label>Имя учредителя</label>
                        <input class="border-0 bg-transparent m-3 w-50" asp-for="@item.Name" type="text">
                    </div>
                    <div class="text-center">
                        <label>Фамилия учредителя</label>
                        <input class="border-0 bg-transparent m-3 w-50" asp-for="@item.Surname" type="text">
                    </div>
                    <div class="text-center">
                        <label>Отчество учредителя</label>
                        <input class="border-0 bg-transparent m-3 w-50" asp-for="@item.Patronymic" type="text">
                    </div>
                    
                    
                    
                    <input type="submit" class="btn btn-danger" asp-controller="Founder" asp-action="DeleteFounder" asp-route-clientId="@Model.Id" asp-route-founderId="@item.Id" value="Удалить" />
                </div>
                }
                </div>
            </div>
        <div class="row justify-content-center">
            <div class="col-12 mb-4 justify-content-center d-flex founders">
                <div class="col-8 mb-3 justify-content-center align-items-center d-flex founderItem" v-for="item in founders" :key="item.id">
                    <div class="text-center">
                        <label>Инн учредителя</label>
                        <input class="border-0 bg-transparent m-3 w-50" :name="`Founders[${founders.indexOf(item)}].INN`" :value="item.INN" type="text">
                    </div>
                    <div class="text-center">
                        <label>Имя учредителя</label>
                        <input class="border-0 bg-transparent m-3 w-50" :name="`Founders[${founders.indexOf(item)}].Name`" :value="item.Name" type="text">
                    </div>
                    <div class="text-center">
                        <label>Фамилия учредителя</label>
                        <input class="border-0 bg-transparent m-3 w-50" :name="`Founders[${founders.indexOf(item)}].Surname`" :value="item.Surname" type="text">
                    </div>
                    <div class="text-center">
                        <label>Отчество учредителя</label>
                        <input class="border-0 bg-transparent m-3 w-50" :name="`Founders[${founders.indexOf(item)}].Patronymic`" :value="item.Patronymic" type="text">
                    </div>

                    <button v-on:click="deleteFounder" class="btn btn-danger">Удалить</button>

                </div>
            </div>
            <div class="col-8 ">
                <h4>Добавить учредителя</h4>
                <input class="form-control mb-2" v-model="founder.INN" type="text" placeholder="Введите ваш ИНН">
                <input class="form-control mb-2" v-model="founder.Name" type="text" placeholder="Введите имя">
                <input class="form-control mb-2" v-model="founder.Surname" type="text" placeholder="Введите фамилию">
                <input class="form-control mb-2" v-model="founder.Patronymic" type="text" placeholder="Введите отчество">
                <button class="btn btn-primary" v-on:click.prevent="AddFounderToList(founder)">Добавить</button>
            </div>
        </div>
            <div class="col-5">
                <input class="form-control btn-success p-3" asp-controller="Client" asp-action="ChangeClient" type="submit" value="Сохранить">
            </div>
        </div>
</form>
